{
  "manifest_version": 2,
  "name": "Chrome Snap",
  "description": "This extension allows to snap Chrome windows and emulate workspaces",
  "version": "0.5",

  "icons":{
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Chrome Snap"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "tile-left": {
      "description": "Tile window Left",
      "suggested_key": {
        "default": "Ctrl+Shift+Left"
      }
    },
    "tile-right": {
      "description": "Tile window Right",
      "suggested_key": {
        "default": "Ctrl+Shift+Right"
      }
    },
    "tile-up": {
      "description": "Tile window Up",
      "suggested_key": {
        "default": "Ctrl+Shift+Up"
      }
    },
    "tile-down": {
      "description": "Tile window Down",
      "suggested_key": {
        "default": "Ctrl+Shift+Down"
      }
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "system.display"
  ]
}
