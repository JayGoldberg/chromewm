{
  "manifest_version": 2,
  "name": "Windows Manager for Google Chrome™",
  "description": "Allows to tile Chrome™ windows and emulate workspaces",
  "version": "0.9.5",
  "icons":{
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "browser_action": {
    "default_title": "Chrome Windows Manager",
    "default_icon": {
      "38": "icon-38-1.png"
    },
    "default_popup": "options.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false
  },
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "tile-left": {
      "description": "Tile window Left",
      "suggested_key": {
        "default": "Alt+Shift+Left"
      }
    },
    "tile-right": {
      "description": "Tile window Right",
      "suggested_key": {
        "default": "Alt+Shift+Right"
      }
    },
    "tile-up": {
      "description": "Tile window Up",
      "suggested_key": {
        "default": "Alt+Shift+Up"
      }
    },
    "tile-down": {
      "description": "Tile window Down",
      "suggested_key": {
        "default": "Alt+Shift+Down"
      }
    },
    "ws-next": {
      "description": "Next workspace: (Alt+X)"
    },
    "ws-prev": {
      "description": "Previous workspace: (Alt+Z)"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "system.display",
    "notifications"
  ]
}
